# OpenSignal
# Numerical Library Test Makefile
# Dogan C. Karatas | 2018 | GNU GPL v3

CC=gcc

#TEST_NUMERICAL+=-DCOMPLEX_TEST
#TEST_NUMERICAL+=-DPOLAR_TEST
TEST_NUMERICAL+=-DMATRIX_TEST
#TEST_NUMERICAL+=-DMATRIX_BASIC_TEST
TEST_NUMERICAL+=-DMATRIX_ARRAY_TEST
#TEST_NUMERICAL+=-DMATRIX_COMPARE_TEST
#TEST_NUMERICAL+=-DMATRIX_IDENTITY_TEST
TEST_NUMERICAL+=-DMATRIX_COPY_TEST
#TEST_NUMERICAL+=-DMATRIX_DETERMINANT_TEST
TEST_NUMERICAL+=-DMATRIX_TRANSPOSE_TEST
TEST_NUMERICAL+=-DVECTOR_TEST
TEST_NUMERICAL+=-DVECTOR_BASIC_TEST
SRCS_TEST_NUMERICAL=$(wildcard *.c)
OBJS_TEST_NUMERICAL=$(SRCS_TEST_NUMERICAL:.c=.o)
DEPS_TEST_NUMERICAL=$(SRCS_TEST_NUMERICAL:.c=.d)
CFLAGS_TEST_NUMERICAL=-I../../include -g -Wall -Wextra -Werror $(TEST_NUMERICAL)

.PHONY: all
all:	$(OBJS_TEST_NUMERICAL)

$(DEPS_TEST_NUMERICAL): %.d:%.c
	$(CC) $(CFLAGS_TEST_NUMERICAL) -MM $< >$@

$(OBJS_TEST_NUMERICAL): $(SRCS_TEST_NUMERICAL)
	$(CC) $(CFLAGS_TEST_NUMERICAL) -c $^

-include $(DEPS_TEST_NUMERICAL)

.PHONY: clean
clean:
	rm -f $(OBJS_TEST_NUMERICAL) $(DEPS_TEST_NUMERICAL)
